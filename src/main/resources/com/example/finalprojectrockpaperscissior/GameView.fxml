<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>

<VBox spacing="15" alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.finalprojectrockpaperscissior.GameController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <Label text="Rock - Paper - Scissors"
           style="-fx-font-size: 24; -fx-font-weight: bold;" />

    <HBox spacing="10" alignment="CENTER">
        <Button text="Rock" onAction="#onRock" />
        <Button text="Paper" onAction="#onPaper" />
        <Button text="Scissors" onAction="#onScissors" />
    </HBox>

    <Label fx:id="playerMoveLabel" text="You chose:" />
    <Label fx:id="computerMoveLabel" text="Computer chose:" />
    <Label fx:id="roundResultLabel" text="Round result:" />
    <Label fx:id="scoreLabel" text="Score â†’ You: 0 | Computer: 0" />

    <Label fx:id="finalMessageLabel"
           text=""
           style="-fx-font-size: 18; -fx-font-weight: bold;" />
</VBox>
